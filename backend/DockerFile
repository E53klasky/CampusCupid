# Use Go base image
FROM golang:1.21 as build

# Set working directory
WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./
RUN go mod download

# Copy all files
COPY . .

# Build the Go app
RUN go build -o main .

# Final image
FROM golang:1.21

WORKDIR /app

COPY --from=build /app/main .

# ðŸ”¥ This is key!
EXPOSE 8080

# ðŸ”¥ This tells Render how to run the app
CMD ["./main"]
